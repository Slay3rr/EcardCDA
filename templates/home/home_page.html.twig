{# templates/home/home.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
{% endblock %}
{% block title %}Ecard{% endblock %}

{% block body %}

<div class="container-fluid px-2">
    <div id="homeCarousel" class="carousel slide carousel-fade mb-5" data-bs-ride="carousel">
        <div class="carousel-inner rounded-4">
            <div class="carousel-item active" style="height: 400px; background: url('{{ asset('images/Carousel/slide1.jpg') }}') no-repeat center center; background-size: cover;">
                <div class="caption-container">
                    <div class="caption-box">
                        <h2>Découvrez tout l'univers de Yu-Gi-Oh!</h2>
                    </div>
                </div>
            </div>
            <div class="carousel-item" style="height: 400px; background: url('{{ asset('images/Carousel/slide2.jpg') }}') no-repeat center center; background-size: cover;">
                <div class="caption-container">
                    <div class="caption-box">
                        <h2>Attrapez toutes les cartes Pokemons en un click!</h2>
                    </div>
                </div>
            </div>
            <div class="carousel-item" style="height: 400px; background: url('{{ asset('images/Carousel/slide3.jpg') }}') no-repeat center center; background-size: cover;">
                <div class="caption-container">
                    <div class="caption-box">
                        <h2>Achetez, Vendez en quelques clics!</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Indicateurs -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2"></button>
        </div>

        <!-- Contrôles -->
        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>
<!-- Section Best Sellers -->
    <section class="section-wrapper bg-light">
        <div class="container">
            <h2 class="section-title">Best Sellers</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for article in bestSellers %}
                    <div class="col">
                        {% import 'partials/_product_card.html.twig' as product_card %}
                        {{ product_card.display(article, bestSellersImages[article.id] ?? null, 'badge-trending') }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Section Nouveautés -->
    <section class="section-wrapper">
        <div class="container">
            <h2 class="section-title">Nouveautés</h2>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                {% for article in nouveautes %}
                    <div class="col">
                        {% import 'partials/_product_card.html.twig' as product_card %}
                        {{ product_card.display(article, nouveautesImages[article.id] ?? null, 'badge-new') }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Section Tendances -->
    <section class="section-wrapper bg-light">
        <div class="container">
            <h2 class="section-title">Tendances</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for article in tendances %}
                    <div class="col">
                        {% import 'partials/_product_card.html.twig' as product_card %}
                        {{ product_card.display(article, tendancesImages[article.id] ?? null, 'badge-trending') }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
