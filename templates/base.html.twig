{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}E-Card{% endblock %}</title>

    {# Liens Bootstrap 5 (CDN par exemple) #}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    {# Styles personnalisés si besoin #}
    <style>
      body {
        background-color: #F8F9FA;
        color: #212529;
        overflow-x: hidden; /* Ajout important */
        position: relative; /* Ajout important */
        width: 100%; /* Ajout important */
      }
      a {
        color: #0D6EFD; /* Couleur des liens */
        transition: all 0.3s ease-in-out;
      }
      a:hover {
        color: #084298; /* Couleur de hover sur les liens */
      }
      .navbar {
        background-color: #0D1B2A; /* Barre de navigation bleu foncé */
      }
      .navbar .nav-link, .navbar-brand {
        color: #FFFFFF !important;
      }
      .btn-primary {
        background-color: #007BFF;
        border-color: #007BFF;
      }
      .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
      }
      footer {
        background-color: #1B263B; /* Footer bleu foncé */
        color: #ADB5BD; /* Texte gris clair */
      }
      .card {
        border: 1px solid #DEE2E6;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
    </style>

    {% block stylesheets %}{% endblock %}
  </head>

  <body>
    {# Inclusion du header #}
    {% include 'partials/_header.html.twig' %}

    <main class="position-relative overflow-hidden"> {# Modifié ici #}
      {% block body %}{% endblock %}
    </main>

    {# Inclusion du footer #}
    {% include 'partials/_footer.html.twig' %}

    {# Scripts JS Bootstrap #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
