{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1>Votre Panier</h1>

<table>
    <thead>
        <tr>
            <th>Article</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for item in cart %}
            <tr>
                <td>{{ item.article.Titre }}</td>
                <td>{{ item.article.price }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.article.price * item.quantity }}</td>
                <td>
                    <a href="{{ path('cart_update', {id: item.article.id, quantity: item.quantity + 1}) }}">+</a>
                    <a href="{{ path('cart_update', {id: item.article.id, quantity: item.quantity - 1}) }}">-</a>
                    <a href="{{ path('cart_remove', {id: item.article.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<h2>Total : {{ total }}</h2>

<a href="{{ path('public_articles') }}" class="btn btn-secondary">Revenir aux achats</a>

{% endblock %}

