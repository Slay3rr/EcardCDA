{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<nav>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('articles_by_category', {id: category.id}) }}">
                    {{ category.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>

<h1>Liste des articles</h1>

{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('api_article_new') }}" class="btn btn-primary mb-3">Ajouter un article</a>
{% endif %}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Catégories</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Actions</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.id }}</td>
            <td>{{ article.Titre }}</td>
            <td>
                {% for category in article.Category %}
                    {{ category.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
           <td>
           <td>
    {# Dump complet de l'article pour voir toutes les données #}
    {{ dump(article) }}
    
    {# Affiche l'URL brute en texte pour vérification #}
    <p>URL de l'image : {{ article.imageId }}</p>
    
    {# Image avec condition plus explicite #}
    {% if article.imageId %}
        <img src="{{ article.imageId }}" 
             alt="{{ article.Titre }}"
             style="max-width: 100px;"
             onerror="this.src='{{ asset('images/placeholder.jpg') }}'; console.log('Erreur de chargement pour l\'image : ' + this.src);">
    {% else %}
        <img src="{{ asset('images/placeholder.jpg') }}" 
             alt="Image par défaut"
             style="max-width: 100px;">
    {% endif %}
</td>
  <a href="{{ path('public_article_show', {id: article.id}) }}" class="btn btn-info btn-sm">Voir</a>
  {% if is_granted('ROLE_USER') %}
      <a href="{{ path('add_offer', { 'id': article.id }) }}" class="btn btn-warning btn-sm mt-1">Ajouter une offre</a>
  {% endif %}
  {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('api_article_edit', {id: article.id}) }}" class="btn btn-warning btn-sm mt-1">Modifier</a>
      <form method="post" action="{{ path('api_article_delete', {id: article.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr ?');">
          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
          <button class="btn btn-danger btn-sm">Supprimer</button>
      </form>
  {% endif %}
</td>

        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
