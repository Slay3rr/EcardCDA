{% macro display(article, imageUrl, badge = null) %}
    <div class="card card-trading mx-auto" style="max-width: 300px;">
        {% if badge %}
            <span class="card-badge {{ badge }}">{{ badge == 'badge-new' ? 'Nouveau' : 'Tendance' }}</span>
        {% endif %}
        <div class="card-image-wrapper d-flex justify-content-center align-items-center" style="height: 200px; background-color: #f8f9fa;">
            {% if imageUrl %}
                <img src="{{ imageUrl }}" 
                     class="card-img-top p-2" 
                     alt="{{ article.Titre }}"
                     style="max-height: 180px; width: auto; object-fit: contain;">
            {% else %}
                <img src="{{ asset('images/placeholder.jpg') }}" 
                     class="card-img-top p-2" 
                     alt="{{ article.Titre }}"
                     style="max-height: 180px; width: auto; object-fit: contain;">
            {% endif %}
        </div>
        <div class="card-body">
            <h5 class="card-title text-truncate">{{ article.Titre }}</h5>
            <p class="card-text small" style="height: 60px; overflow: hidden;">
                {{ article.content|length > 100 ? article.content|slice(0,100) ~ '...' : article.content }}
            </p>
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="card-price">{{ article.price }} €</span>
                    <a href="{{ path('public_article_show', {id: article.id}) }}" class="btn btn-sm btn-outline-primary">Voir détails</a>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}