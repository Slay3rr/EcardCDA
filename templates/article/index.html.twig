{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
<nav>
    <ul>
        {% for category in categories %}
            <li>
                <a href="{{ path('articles_by_category', {id: category.id}) }}">
                    {{ category.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>

<h1>Liste des articles</h1>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Image</th>
            <th>Prix</th>
            <th>Catégories</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for article in articles %}
        <tr>
            <td>{{ article.Titre }}</td>
            <td>
    {# Ajoutez ce dump pour voir l'URL #}
    {{ dump(article.imageId) }}
    <img src="{{ article.imageId ?? asset('images/placeholder.jpg') }}" 
         alt="{{ article.Titre }}"
         style="max-width: 100px;">
</td>
            <td>{{ article.price }} €</td>
            <td>
                {% for category in article.Category %}
                    {{ category.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
            <td>
                <a href="{{ path('public_article_show', {id: article.id}) }}" class="btn btn-info btn-sm">Voir</a>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('add_offer', { 'id': article.id }) }}" class="btn btn-warning btn-sm mt-1">Ajouter une offre</a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}