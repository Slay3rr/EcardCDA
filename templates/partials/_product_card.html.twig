{% macro display(article, imageUrl, badge = null) %}
    <div class="card card-trading h-100">
        {% if badge %}
            <span class="card-badge {{ badge }}">{{ badge == 'badge-new' ? 'Nouveau' : 'Tendance' }}</span>
        {% endif %}
        <div class="card-image-wrapper">
            {% if imageUrl %}
                <img src="{{ imageUrl }}" class="card-img-top" alt="{{ article.Titre }}">
            {% else %}
                <img src="{{ asset('images/placeholder.jpg') }}" class="card-img-top" alt="{{ article.Titre }}">
            {% endif %}
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ article.Titre }}</h5>
            <p class="card-text flex-grow-1">{{ article.content|length > 100 ? article.content|slice(0,100) ~ '...' : article.content }}</p>
            <div class="card-footer bg-transparent border-0 mt-auto">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="card-price">{{ article.price }} €</span>
                    <a href="{{ path('public_article_show', {id: article.id}) }}" class="btn btn-outline-primary">Voir détails</a>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}