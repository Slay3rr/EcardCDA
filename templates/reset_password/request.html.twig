{# templates/reset_password/request.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Réinitialiser votre mot de passe</h1>
    {{ form_start(requestForm) }}
        <div class="form-group">
            {{ form_label(requestForm.email, 'Votre adresse email') }}
            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary mt-3">Envoyer le lien de réinitialisation</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
